@page "{id:int}"
@model SAOnlineMart.Frontend.Pages.Admin.Products.DeleteModel

<h1>Delete Product</h1>

<p>Are you sure you want to delete the product?</p>

<div>
    <h4>@Model.Product.Name</h4>
    <p>@Model.Product.Description</p>
    <p><strong>Price:</strong> @Model.Product.Price</p>
    <p><strong>Stock:</strong> @Model.Product.Stock</p>
</div>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-page="/Admin/Products/Index" class="btn btn-secondary">Cancel</a>
</form>
