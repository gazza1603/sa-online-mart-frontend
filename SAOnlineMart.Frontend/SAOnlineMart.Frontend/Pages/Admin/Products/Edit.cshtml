@page "{id:int}"
@model SAOnlineMart.Frontend.Pages.Admin.Products.EditModel

<h1>Edit Product</h1>

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" asp-for="Product.Price" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input type="number" asp-for="Product.Stock" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image URL</label>
        <input type="text" asp-for="Product.ImageUrl" class="form-control" />
    </div>
    <input type="submit" value="Save Changes" class="btn btn-primary" />
</form>
